<Window x:Class="LableDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LableDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label 
            Margin="16,16,16,0"
            BorderThickness="1"
            BorderBrush="Black"
            >
            <StackPanel Orientation="Horizontal">
                <Image Width="32" Source="https://cdn-icons-png.flaticon.com/512/666/666162.png"></Image>
                <AccessText FontSize="32" Text="Message"></AccessText>
            </StackPanel>
        </Label>
        <TextBox
            Margin="16"
            FontSize="32"
            >
            
        </TextBox>
    </StackPanel>
</Window>
